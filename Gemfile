source 'https://rubygems.org'

ruby '2.7.2'

gem 'jekyll', '>= 4.2.0'
gem 'mini_racer'

# If you put them in a jekyll_plugins group theyâ€™ll automatically be required into Jekyll
# One of 3 ways to load plug-ins, don't need to do both
group :jekyll_plugins do
  gem 'uswds-jekyll', '~> 5.3', '>= 5.3.0'
  gem 'jekyll-redirect-from', '>= 0.16.0'
  gem 'jekyll-sitemap', '>= 1.4.0'
  gem 'jemoji', '>= 0.12.0'
  gem 'jekyll-last-modified-at', '>= 1.3.0'
end

group :development, :test do
  gem 'html-proofer'
  gem 'rake'
end
